  function GetParent: IComponentBase;\
  procedure SetParent(AParent: IComponentBase);\
  function GetProperties: TDictionary<string, Variant>;\
  procedure SetProperties(AProperties: TDictionary<string, Variant>);\
end;\
\pard\pardeftab720\sa280\partightenfactor0

\f0\b\fs28 \cf0 2. Componentes de Entrada (
\f2\fs30\fsmilli15210 IInputComponent
